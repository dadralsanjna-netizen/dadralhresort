/* Reset & Fonts */
* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}
:root {
  --soft-black: #222222;
  --cream: #f9f5f0;
}

body {
  font-family: "Georgia", serif;
  background: #f9f4ef;
  color: var(--soft-black);
}
:root {
  --gold: #d4af37;
  --dark-gold: #b38a58;
  --light-gold: #f0e6d2;
  --brown: #5a4a3a;
  --light-brown: #8b6b3d;
  --off-white: #f8f4e9;
}

/* Hero Section */
.hero {
  background-image: url("images/hotel-booking.webp"); /* Replace with actual palace image */
  background-size: cover;
  background-position: top;
  height: 90vh;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
}
.hero-content h1 {
  color: white;
  font-size: 3rem;
  text-align: center;
  text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.7);
}
/* About Us Section Styles */
.about-section {
  display: flex;
  align-items: center;
  padding: 60px 10%;
  background-color: #f9f5f0;
  font-family: "Montserrat", sans-serif;
  text-align: center;
}

.about-image {
  flex: 1;
  padding-right: 40px;
}

.about-image img {
  width: 100%;
  border-radius: 8px;
  box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
}

.about-content {
  flex: 1;
  padding-left: 40px;
}

.about-content h2 {
  font-family: "Playfair Display", serif;
  font-size: 2.5rem;
  color: #8e6c35;
  margin-bottom: 20px;
  text-align: center;
}

.headline {
  font-size: 1.5rem;
  color: #333;
  margin-bottom: 20px;
  font-weight: 500;
}

.description {
  color: #333;
  line-height: 1.8;
  margin-bottom: 20px;
  position: relative;
  overflow: hidden;
}

.description.collapsed {
  max-height: 120px;
}

.read-more {
  color: #8e6c35;
  cursor: pointer;
  font-weight: 600;
  display: inline-block;
  margin-top: 10px;
  text-transform: uppercase;
  font-size: 0.9rem;
  letter-spacing: 1px;
}

.read-more:hover {
  text-decoration: underline;
}

.check-btn {
  background-color: #8e6c35;
  color: white;
  border: none;
  padding: 12px 30px;
  font-size: 1rem;
  cursor: pointer;
  margin-top: 20px;
  text-transform: uppercase;
  letter-spacing: 1px;
  transition: background-color 0.3s;
}

.check-btn:hover {
  background-color: #7a5c2e;
}

@media (max-width: 768px) {
  .about-section {
    flex-direction: column;
    padding: 40px 5%;
  }

  .about-image,
  .about-content {
    padding: 0;
    width: 100%;
  }

  .about-image {
    margin-bottom: 30px;
  }
} /* Header Styles */
.palace-header {
  background-color: var(--dark-gold);
  padding: 1.8rem 3rem;
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: sticky;
  top: 0;
  z-index: 100;
  box-shadow: 0 2px 15px rgba(0, 0, 0, 0.1);
}

.palace-header h1 {
  font-size: 2.4rem;
  font-weight: 600;
  color: var(--light-gold);
  letter-spacing: 1px;
}

dinning-section {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 50px;
  background: linear-gradient(to right, #fff4f0, #ffffff);
}
.image-content {
  flex: 1;
  display: flex;
  justify-content: center;
}

.image-content img {
  max-width: 100%;
  height: auto;
}
/* Hero Section */

.hero-content {
  max-width: 850px;
  padding: 2rem;
  animation: fadeIn 1.5s ease;
}

.hero-content h1 {
  font-size: 4.8rem;
  margin-bottom: 1.5rem;
  color: var(--light-gold);
  text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
  font-weight: 600;
  line-height: 1.2;
}

.hero-content p {
  font-size: 1.8rem;
  margin-bottom: 3rem;
  color: white;
  font-family: "Lora", serif;
}

/* Amenities Section */
.amenities-section {
  padding: 4rem 2rem;
  background-color: var(--cream);
}

.section-header {
  text-align: center;
  margin-bottom: 5rem;
}

.section-header h2 {
  font-size: 3.2rem;
  color: var(--dark-gold);
  margin-bottom: 1.5rem;
  position: relative;
  display: inline-block;
}

.section-header h2:after {
  content: "";
  position: absolute;
  bottom: -15px;
  left: 50%;
  transform: translateX(-50%);
  width: 100px;
  height: 3px;
  background: var(--gold);
}

.section-header p {
  font-size: 1.2rem;
  color: var(--soft-black);
  max-width: 700px;
  margin: 0 auto;
  font-family: "Lora", serif;
}

/* Amenities Grid */
.amenities-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
  gap: 3rem;
  max-width: 1300px;
  margin: 0 auto;
}

.amenity-card {
  background: white;
  border-radius: 8px;
  overflow: hidden;
  box-shadow: 0 5px 20px rgba(0, 0, 0, 0.08);
  transition: all 0.4s ease;
  height: 95%;
}

.amenity-card:hover {
  transform: translateY(-10px);
  box-shadow: 0 15px 30px rgba(0, 0, 0, 0.12);
}

.amenity-image {
  height: 280px;
  overflow: hidden;
  position: relative;
}

.amenity-image img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: transform 0.8s ease;
}

.amenity-card:hover .amenity-image img {
  transform: scale(1.05);
}

.amenity-content {
  padding: 1.6rem;
}

.amenity-content h3 {
  font-size: 1.5rem;
  color: var(--dark-gold);
  margin-bottom: 1.2rem;
  font-weight: 600;
}

.amenity-content p {
  margin-bottom: 2rem;
  color: var(--soft-black);
  font-family: "Lora", serif;
}

.amenity-meta {
  display: flex;
  justify-content: space-between;
  margin-bottom: 1.8rem;
  color: var(--gold);
  font-style: italic;
  font-size: 0.95rem;
}

/* Button Styles */
.btn {
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0.5rem;
  margin-top: 50px;
}
.palace-btn {
  display: inline-block;
  padding: 0.9rem 2.2rem;
  background-color: var(--dark-gold);
  color: white;
  text-decoration: none;
  border-radius: 4px;
  transition: all 0.3s ease;
  border: 2px solid var(---gold);
  font-size: 1rem;
  font-family: "Lora", serif;
  text-align: center;
}

.palace-btn:hover {
  background-color: transparent;
  color: white;
  background-color: var(--gold);
}
.section-title {
  text-align: center;
  margin: 60px 0 40px;
  font-size: 2.5rem;
  color: var(--dark-gold);
  position: relative;
}

.section-title:after {
  content: "";
  display: block;
  width: 100px;
  height: 3px;
  background-color: var(--heritage-gold);
  margin: 15px auto 0;
}

/* Nearby Attractions Section */
.attractions-container {
  margin: 20px 0;
}

.attractions-slider {
  position: relative;
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 60px;
  overflow: hidden;
}

.slider-container {
  display: flex;
  scroll-snap-type: x mandatory;
  gap: 25px;
  padding: 20px 0;
  scroll-behavior: smooth;
  overflow-x: auto;
  -webkit-overflow-scrolling: touch;
  scrollbar-width: none;
}

.slider-container::-webkit-scrollbar {
  display: none;
}

.attraction-card {
  scroll-snap-align: start;
  background-color: white;
  border-radius: 8px;
  overflow: hidden;
  box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
  border: 1px solid var(--sandstone);
  width: 350px;
  flex: 0 0 auto;
}

.attraction-img {
  height: 200px;
  overflow: hidden;
}

.attraction-img img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.attraction-content {
  padding: 20px;
}

.attraction-title {
  font-size: 1.4rem;
  margin-bottom: 10px;
  color: var(--royal-maroon);
}

.attraction-description {
  color: var(--deep-brown);
  margin-bottom: 15px;
  line-height: 1.5;
  font-size: 0.95rem;
  display: -webkit-box;
  /* -webkit-line-clamp: 3; */
  -webkit-box-orient: vertical;
  overflow: hidden;
}

/* .attraction-description.expanded {
    /* -webkit-line-clamp: unset; 
  } */

.read-more {
  color: var(--royal-maroon);
  cursor: pointer;
  font-weight: bold;
  font-size: 0.9rem;
  margin-top: 5px;
  display: inline-block;
}

.distance {
  display: flex;
  align-items: center;
  gap: 5px;
  color: var(--heritage-gold);
  font-weight: bold;
  margin-top: 10px;
}

.slider-nav {
  position: absolute;
  top: 50%;
  width: calc(100% - 40px);
  display: flex;
  justify-content: space-between;
  transform: translateY(-50%);
  pointer-events: none;
}

.slider-btn {
  background-color: rgba(139, 30, 63, 0.7);
  color: white;
  border: none;
  width: 50px;
  height: 50px;
  border-radius: 50%;
  font-size: 1.3rem;
  cursor: pointer;
  pointer-events: auto;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.slider-btn:hover {
  background-color: var(--royal-maroon);
  transform: scale(1.1);
}

.container {
  display: grid;
  grid-template-columns: 1fr 1fr 1fr;
  grid-template-rows: 1fr 1fr;
  gap: 20px;
  padding: 40px;
  height: 100vh;
  box-sizing: border-box;
}

.box {
  position: relative;
  color: white;
  text-decoration: none;
  background-size: cover;
  background-position: center;
  display: flex;
  align-items: flex-end;
  padding: 20px;
  border-radius: 6px;
  overflow: hidden;
}

.box::before {
  content: "";
  position: absolute;
  inset: 0;
  background: rgba(0, 0, 0, 0.4);
  z-index: 0;
}

.box h2 {
  position: relative;
  margin: 0;
  font-size: 22px;
  z-index: 1;
}

.box .link {
  position: relative;
  z-index: 1;
  font-size: 12px;
  text-transform: uppercase;
  margin-top: 6px;
  display: inline-block;
}

